    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
